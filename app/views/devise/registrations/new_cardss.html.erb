<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>新規登録</h2>
      <h5>新規アカウントの作成</h5>
    </div>
    <div class='account-page__inner--right user-form'>

      
      <%= form_for @address do |f| %>
        <%= render "devise/shared/error_messages", resource: @address %>
        <%= devise_error_messages!%>

        <%# 住所 %>
        <div class='field'>
          <div class='field-label'>
            <label class="form-text">郵便番号</label>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.text_field :postal_code, placeholder:"例）123-4567", maxlength:"8", autofocus: true%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%#= f.label :name_kana%>
            <label class="form-text">都道府県</label>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%#= f.label :email%>
            <label class="form-text">市区町村</label>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.text_field :municipality, class:"input-default", id:"city", placeholder:"例）横浜市緑区"%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%#= f.label :password%>
            <label class="form-text">番地</label>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.text_field :address, class:"input-default", id:"addresses", placeholder:"例）青山1-1-1"%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%#= f.label :password_confirmation%>
            <label class="form-text">建物名</label>
            <span class="form-any">任意</span>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off"%>
          </div>
        </div>

        <div class='actions'>
        <div class='field'>
          <div class='field-label'>
            <label class="form-text">電話番号</label>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input serect1'>
            <%= f.text_field :phone_number, class:"input-default", id:"phone-number", placeholder:"例）09012345678",maxlength:"11"%>
          </div>
        </div>

          <%= f.submit "次へ", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
