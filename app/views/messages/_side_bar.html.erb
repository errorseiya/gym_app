<div class="side-header">
  <div class="user-name">
    <%# <a href="#">Tom</a> %>
    <%= link_to current_user.name, edit_user_path(current_user) %>
  </div>
  <div class="chat-create">
     <%= link_to "チャットを作成する", new_room_path %>
  </div>
</div>

<div class="rooms">
   <% current_user.rooms.each do |room| %><%# 「チャットルーム名を表示する」という処理を繰り返し実行 %>
    <div class="room">
      <div class="room-name">
        <%# <a href="#"><%= room.name</a> %> 
        <%= link_to room.name, room_messages_path(room) %>
        <%# room_messages_pathはmessages#index %>
        <%# ※room_messages_path(room) の(room) はroom-idのこと、今messagesを送ろうとしているが土台となるroomの指定が不可欠なので(room)で指定してあげてる%>
        <%# パスにroomを引数とすることで、メッセージと紐付いているチャットルームのidを持たせる %>
        <%# 5行目のroom.nameの「name」は、roomsテーブルのカラム名 %>
      </div>
    </div>
  <% end %>
  
</div>